<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_back"
            style="@style/rounded"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/gray"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:textSize="23sp" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Ticket Medio:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ticket_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            tools:text="value ticket"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Nota:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_nota_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            tools:text="value nota"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_media_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Média de items por compra:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_media_products_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            tools:text="value media produtos"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_last_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Última compra em:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_last_order_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            tools:text="value última compra"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_whatsapp"
            style="@style/rounded"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/teal_700"
            android:clickable="true"
            android:drawableLeft="@drawable/baseline_whatsapp_24"
            android:textSize="23sp" />



    </LinearLayout>
</RelativeLayout>